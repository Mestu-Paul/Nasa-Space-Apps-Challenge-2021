<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true" >
            <shape>
                <solid
                    android:color="#004F81" />
                <stroke
                    android:width="1dp"
                    android:color="#222222" />
                <corners
                    android:radius="7dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:startColor="#BAC0E1"
                    android:endColor="#8B6CC3"
                    android:angle="270" />
                <stroke
                    android:width="1dp"
                    android:color="#2845E4" />
                <corners
                    android:radius="7dp" />
                <padding
                    android:left="5dp"
                    android:top="5dp"
                    android:right="5dp"
                    android:bottom="5dp" />
            </shape>
        </item>
    </selector>